
public class MainPersona {

	public static void main(String[] args) {
		Persona p1 = new Persona();
		p1.nombre = "Bartolo"; //asi se cambian los valores 
		p1.edad = 29;
		p1.peso = 58.5;
		p1.profesion = "Mecánico";
		
		System.out.println(p1.nombre);
		System.out.println(p1.edad);
		System.out.println(p1.peso);
		System.out.println(p1.profesion);
        System.out.println(p1); //esto imprime la dirreción donde se encunetra el objeto
        
        Persona p2 = new Persona();
        p2.nombre = "Bud Spencer";
        p2.edad = 78;
        p2.peso = 119;
        p2.profesion = "Actor";
        
        System.out.println(p2.nombre);
		System.out.println(p2.edad);
		System.out.println(p2.peso);
		System.out.println(p2.profesion);
        System.out.println(p2);
	}

}
